html {
  overflow: hidden;
  font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
}
:root {
  ---headerBackground-color: #ec4141;
  ---AsideBorderRight-color: #e1e1e1;
  ---AsideBackground-color: #fff;
  ---Aside-color: #000;
  ---AsideActiveBackground-color: #f6f6f7;
  ---inputBackground-color: #ebebeb;
  ---color: #000;
  ---loadingBackground-color: rgba(255, 255, 255, 0.9);
  ---audioBackgoud-color: #f5f5f5;
  ---SkeletonBackground: linear-gradient(90deg, #f0f2f5 25%, #e6e8eb 37%, #f0f2f5 63%);
}
.child-view {
  /*  position: absolute; */
  width: 100%;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.55, 0, 0.1, 1);
}
/* 离开 */
.slide-fade-leave-to {
  opacity: 0;
  transform: translateX(50px);
}
/* 进入 */
.slide-fade-enter-from {
  opacity: 0;
  transform: translateX(50px);
}
.personality,
.singer,
.ranking,
.playlist,
.newMusic,
.exclusive {
  box-sizing: border-box;
  overflow-x: hidden;
  /*   height: 80vh;
  overflow-y: auto; */
}
::v-deep(.el-loading-spinner .el-loading-text) {
  color: var(---color);
}
::v-deep(.el-loading-spinner .path) {
  stroke: var(---color);
}
.ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
